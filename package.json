{
  "name": "tinglebuzz",
  "version": "1.0.0",
  "description": "Realtime informational assistance.",
  "main": "index.js",
  "scripts": {
    "test": "REST_PORT=3010 mocha -t 15000 --compilers js:babel-core/register src/**/*.test.js",
    "test:watch": "MONGODB_URL=mongodb://localhost:27017/tinglebuzz-test npm run test -- --watch",
    "lint": "./node_modules/.bin/esw --color --env browser,node ./src ./tools",
    "lint:watch": "npm run lint -- -w",
    "clean": "del-cli dump.rdb dist/**/*",
    "copy": "copy ./src/public/**/* ./dist",
    "start:dev": "better-npm-run start:dev",
    "start:prod": "better-npm-run start:prod",
    "prod": "better-npm-run start:prod",
    "build:dev:client": "npm run clean && npm run copy && babel-node ./tools/start.js",
    "build:dev:server": "nodemon --watch ./src/server/ --exec babel-node ./src/server/server.js",
    "build:dev:socket": "babel-node ./src/socketcluster/server.js",
    "build:prod:client": "npm run clean && npm run copy && webpack --config tools/webpack.config.js",
    "build:prod:server": "NODE_ENV=production webpack --config tools/webpack.server.config.js",
    "mongo": "better-npm-run start:mongo",
    "redis": "redis-server"
  },
  "betterScripts": {
    "start:dev": {
      "command": "concurrently \"npm run build:dev:server\" \"npm run build:dev:client\" \"npm run mongo\" \"npm run redis\" ",
      "env": {
        "ENV": "dev",
        "NODE_ENV": "development",
        "HTTP_PORT": 3000,
        "REST_PORT": 3001,
        "MONGODB_URL": "mongodb://localhost:27017/tinglebuzz-test",
        "REDIS_PORT": 6379,
        "SOCKET_PORT": 4071,
        "SOCKETCLUSTER_APP_NAME": "tinglebuzz_dev",
        "SOCKETCLUSTER_KILL_MASTER_SIGNAL": true,
        "SOCKETCLUSTER_PROTOCOL": "http",
        "SSL_KEY": "ssl/client-key.pem",
        "SSL_CERT": "ssl/client-cert.pem"
      }
    },
    "start:prod": {
      "command": "npm-run-all lint build:prod:client build:prod:server",
      "env": {
        "SOCKETCLUSTER_APP_NAME": "tinglebuzz",
        "ENV": "prod",
        "NODE_ENV": "production",
        "HTTP_PORT": 3000,
        "REST_PORT": 3002,
        "MONGODB_URL": "mongodb://localhost:27017/tinglebuzz",
        "REDIS_URL": "redis://localhost:6379",
        "SOCKET_PORT": 4071,
        "SOCKETCLUSTER_KILL_MASTER_SIGNAL": false,
        "SOCKETCLUSTER_PROTOCOL": "https"
      }
    },
    "start:mongo": {
      "command": "mongod --dbpath ./db/mongodb/data",
      "env": {
        "MONGODB_URL": "mongodb://localhost:27017/tinglebuzz"
      }
    },
    "start:test:watch": {
      "command": "npm run test -- --watch",
      "env": {
        "MONGODB_URL": "mongodb://localhost:27017/tinglebuzz-test"
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leedium/tinglebuzz.git"
  },
  "author": "David Lee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leedium/tinglebuzz/issues"
  },
  "homepage": "https://github.com/leedium/tinglebuzz#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.20.0",
    "babel-loader": "^6.2.9",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "better-npm-run": "0.0.13",
    "casperjs": "^1.1.3",
    "colors": "^1.1.2",
    "concurrently": "^3.1.0",
    "copy": "^0.3.0",
    "cp": "^0.2.0",
    "del": "^2.2.2",
    "del-cli": "^0.2.1",
    "enzyme": "^2.6.0",
    "eslint": "^3.12.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "eslint-watch": "^2.1.14",
    "expect": "^1.20.2",
    "http-proxy": "^1.16.2",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "npm-run-all": "^3.1.2",
    "phantom": "^3.2.1",
    "react-hot-loader": "^1.3.1",
    "redis-server": "^0.4.0",
    "spooky": "^0.2.5",
    "supertest": "^2.0.1",
    "webpack": "^2.1.0-beta.27",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2",
    "zombie": "^5.0.5"
  },
  "dependencies": {
    "bcryptjs": "^2.4.0",
    "body-parser": "^1.15.2",
    "bootstrap": "^4.0.0-alpha.5",
    "connect": "3.0.1",
    "express": "^4.14.0",
    "jsonwebtoken": "^7.2.1",
    "keymirror": "^0.1.1",
    "minimist": "1.1.0",
    "mongodb": "^2.2.15",
    "mongoose": "^4.7.2",
    "mongoose-findorcreate": "^0.1.2",
    "morgan": "1.7.0",
    "passport": "^0.3.2",
    "passport-facebook": "^2.1.1",
    "passport-facebook-token": "^3.3.0",
    "passport-local": "^1.0.0",
    "passport-unique-token": "^0.1.4",
    "react": "^15.4.1",
    "react-dom": "^15.4.1",
    "react-redux": "^5.0.0",
    "react-router": "^3.0.0",
    "redis": "^2.6.3",
    "redux": "^3.6.0",
    "redux-saga": "^0.13.0",
    "redux-thunk": "^2.1.0",
    "sc-cluster-broker-client": "1.x.x",
    "sc-framework-health-check": "1.x.x",
    "sc-hot-reboot": "1.x.x",
    "serve-static": "1.8.0",
    "socketcluster": "^5.1.3",
    "socketcluster-client": "^5.1.1",
    "tiny-jsonrpc": "^2.0.1",
    "validator": "^6.2.0"
  }
}
