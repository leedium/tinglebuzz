{
  "name": "tinglebuzz",
  "version": "1.0.0",
  "description": "Realtime informational assistance.",
  "main": "index.js",
  "scripts": {
    "test": "mocha src/**/*.test.js",
    "test:watch": "npm run test -- --watch",
    "lint": "./node_modules/.bin/esw --color --env browser,node ./src ./tools",
    "lint:watch": "npm run lint -- -w",
    "start:dev": "better-npm-run start:dev",
    "start:prod": "better-npm-run start:prod",
    "prod": "better-npm-run start:prod",
    "build:dev:client": "babel-node ./tools/start.js",
    "build:dev:server": "nodemon --watch ./src/server/ --exec babel-node ./src/server/server.js",
    "build:prod:client": "webpack --config tools/webpack.config.js",
    "build:prod:server": "NODE_ENV=production webpack --config tools/webpack.server.config.js",
    "redis": "redis-server"
  },
  "betterScripts": {
    "start:dev": {
      "command": "npm-run-all --parallel build:dev:client build:dev:server redis",
      "env": {
        "NODE_ENV": "development",
        "HTTP_PORT": 3000,
        "REST_PORT": 3002,
        "MONGODB_URL": "mongodb://localhost:27017/tinglebuzz",
        "REDIS_PORT": 6379,
        "SOCKET_PORT": 4071,
        "SSL_KEY": "../../../ssl/client-key.pem",
        "SSL_CERT": "../../../ssl/client-cert.pem"
      }
    },
    "start:prod": {
      "command": "npm-run-all lint build:prod:client build:prod:server",
      "env": {
        "NODE_ENV": "production",
        "HTTP_PORT": 3000,
        "REST_PORT": 3002,
        "MONGODB_URL": "mongodb://localhost:27017/tinglebuzz",
        "REDIS_URL": "redis://localhost:6379",
        "SOCKET_PORT": 4071
      }
    }
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leedium/tinglebuzz.git"
  },
  "author": "David Lee",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/leedium/tinglebuzz/issues"
  },
  "homepage": "https://github.com/leedium/tinglebuzz#readme",
  "devDependencies": {
    "babel-cli": "^6.18.0",
    "babel-core": "^6.20.0",
    "babel-loader": "^6.2.9",
    "babel-preset-es2015": "^6.18.0",
    "babel-preset-react": "^6.16.0",
    "babel-preset-stage-0": "^6.16.0",
    "better-npm-run": "0.0.13",
    "colors": "^1.1.2",
    "copy": "^0.3.0",
    "cp": "^0.2.0",
    "del": "^2.2.2",
    "enzyme": "^2.6.0",
    "eslint": "^3.12.0",
    "eslint-config-airbnb": "^13.0.0",
    "eslint-plugin-import": "^2.2.0",
    "eslint-plugin-jsx-a11y": "^2.2.3",
    "eslint-plugin-react": "^6.8.0",
    "eslint-watch": "^2.1.14",
    "expect": "^1.20.2",
    "http-proxy": "^1.16.2",
    "json-loader": "^0.5.4",
    "mocha": "^3.2.0",
    "npm-run-all": "^3.1.2",
    "react-hot-loader": "^1.3.1",
    "redis-server": "^0.4.0",
    "supertest": "^2.0.1",
    "webpack": "^2.1.0-beta.27",
    "webpack-dev-middleware": "^1.8.4",
    "webpack-hot-middleware": "^2.13.2"
  },
  "dependencies": {
    "body-parser": "^1.15.2",
    "express": "^4.14.0",
    "mongodb": "^2.2.15",
    "mongoose": "^4.7.2",
    "redis": "^2.6.3"
  }
}
